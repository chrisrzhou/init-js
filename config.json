{
  "author": {
    "firstName": "Chris",
    "lastName": "Zhou",
    "email": "chrisrzhou@pm.me",
    "url": "https://chrisrzhou.io"
  },
  "package": {
    "version": "0.1.0",
    "license": "MIT",
    "files": [
      "lib/",
      "index.js",
      "index.d.ts"
    ],
    "main": "index.js",
    "dependencies": {},
    "devDependencies": {
      "c8": "^7.7.0",
      "type-coverage": "^2.17.5",
      "typescript": "^4.2.4",
      "xo": "^0.39.1"
    },
    "scripts": {
      "build": "tsc && type-coverage",
      "lint": "xo --fix",
      "prepack": "npm run build && npm run lint",
      "test-coverage": "c8 --check-coverage --lines 100 --functions 100 --branches 100 --reporter lcov node test/index.js",
      "test": "npm run build && npm run lint && npm run test-coverage"
    },
    "engines": {
      "node": ">=12"
    },
    "prettier": {
      "tabWidth": 2,
      "useTabs": false,
      "singleQuote": true,
      "bracketSpacing": false,
      "semi": true,
      "trailingComma": "all"
    },
    "typeCoverage": {
      "atLeast": 100,
      "detail": true,
      "strict": true
    },
    "xo": {
      "prettier": true,
      "esnext": false,
      "rules": {
        "unicorn/no-array-callback-reference": "off",
        "unicorn/no-array-for-each": "off",
        "unicorn/no-array-reduce": "off"
      }
    }
  }
}
